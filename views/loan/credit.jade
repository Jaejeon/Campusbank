
block content
    form#credit-form
        div.row
            h5 Step1. 본인인증
            </br></br></br></br></br></br>

        div.row
            h5 Step2. 기본정보
            // 성별정보
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 성별&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select1', name='sex-type', value='male', checked='true')
                    label(for='basic-info-select1') 남&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select2', name='sex-type', value='female', checked='true')
                    label(for='basic-info-select2') 여
            // 군필여부
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 군필여부&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select3', name='army_type', value='true', checked='true')
                    label(for='basic-info-select3') 군필&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select4', name='army_type', value='false', checked='true')
                    label(for='basic-info-select4') 미필
            // 졸업여부
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 졸업여부&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select5', name='graduate_type', value='inSchool', checked='true')
                    label(for='basic-info-select5') 재학&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select6', name='graduate_type', value='LOA', checked='true')
                    label(for='basic-info-select6') 휴학&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select7', name='graduate_type', value='graduate', checked='true')
                    label(for='basic-info-select7') 졸업
            </br></br>

            // 소득여부
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 소득여부&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select8', name='income_type', value='yes', checked='true')
                    label(for='basic-info-select8') 있음&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select9', name='income_type', value='no', checked='true')
                    label(for='basic-info-select9') 없음
            // 소득형태
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 소득형태&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select10', name='work_type', value='regular', checked='true')
                    label(for='basic-info-select10') 정규직&nbsp&nbsp&nbsp&nbsp
                    input(type='radio', id='basic-info-select11', name='work_type', value='unregular', checked='true')
                    label(for='basic-info-select11') 비정규직
            // 소득금액
            div.col-lg-4.col-md-4.col-xs-4.col-sm-4.basic-info-select
                div 소득금액&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    input(type='number', id='inputIncome', name='Income', placeholder='예) 88', required='true',
                    data-error='금액을 입력해주세요.').income_box.fill-in-form
                    label(for='income') 만원

            div.basic-info-select
                table.col-xs-12
                    tbody
                        tr
                            th(scope='row')
                                p.red-text 주민등록상
                                p 주소지
                            td
                                div.row
                                    input(type='text',name='zipCode', id='sample4_postcode', onclick='find_address()', placeholder='우편번호', readonly='true').col-xs-2
                                    input(type='button', onclick='find_address()', value='주소 검색', style='font-size:14px;').col-xs-2.btn-default
                                div.row
                                    input(type='text',name='address_oldSystem', id='sample4_jibunAddress', onclick='find_address()', placeholder='지번주소', readonly='true').col-md-6.col-xs-8
                                    input(type='text', id='detail-address', placeholder='나머지주소', style='height:24px;').col-md-5.col-xs-8.fill-in-form
                                div.row
                                    input(type='text',name='address_newSystem', value='도로명주소', readonly='true')#button_roadAddress
                                    input(type='text', id='sample4_roadAddress', readonly='true').col-xs-6
                        tr


        div.row
            h5 Step3. 학력정보
            table.col-xs-12
                tr
                    td.sub-title
                        | 학교정보
                tr
                    td.col-sm-4
                        span 소속학교
                        input(type='text',name='school', placeholder='학교', readonly='true', id='credit-school-search')
                    td.col-sm-4
                        span 단과대학
                        input(type='text',name='depart', placeholder='단과대학', readonly='true', id='credit-depart-search')
                    td.col-sm-4
                        span 소속학과
                        input(type='text',name='major', placeholder='학과', readonly='true', id='credit-major-search')
                tr
                    td.col-sm-4
                        input(type='text', value='학교 검색', readonly='true')#button_schoolSearch
                tr
                    td.col-sm-4
                        span 입학년도
                        input(type='number', name='admissionYear', placeholder='예) 2011')
                    td.col-sm-4
                        span 이수학기
                        input(type='number', name='completeTerm', placeholder='예) 3')
                    td.col-sm-4
                        span 학점
                        input(type='number', name='gpa', placeholder='3.83')
                        span /
                        input(type='number', name='gpaMax', placeholder='4.5')
                tr
                    td.sub-title
                        | 어학성적

                - for (var i = 0; i < 4; i++){
                    tr.foreignLang-form-row.display-none
                        td.col-sm-4
                            span 시험종류
                            select(name='foreignLang_title')
                                option(value='')
                                option(value='TOEIC') TOEIC
                                option(value='TOEFL') TOEFL
                                option(value='DELF') DELF
                        td.col-sm-4
                            span 점수
                            input(type='text', name='foreignLang_score', placeholder='예) 865, 4급 등등')
                            i.fa.fa-plus-circle.plus-button-foreignLang
                - }

                tr
                    td.sub-title
                        | 기타자격증

                - for (var i = 0; i < 4; i++){
                    tr.license-form-row.display-none
                        td.col-sm-4
                            span 자격증 명
                        td.col-sm-4
                            input(type='text', name='', placeholder='예) 컴퓨터활용능력 2급')
                            i.fa.fa-plus-circle.plus-button-license
                - }

                tr
                    td.sub-title
                        | 인턴경험
                tr
                    td.col-sm-4
                        span 인턴경험
                        input(type='radio', name='intern-exist', value='true', id='intern-radio-true')
                        label(for='intern-radio-true') 유
                        input(type='radio', name='intern-exist', value='false', id='intern-radio-false')
                        label(for='intern-radio-false') 무
                    td.col-sm-8(colspan=2)
                        span 기관명
                        input(type='text', name='intern1').short-input
                        input(type='text', name='intern2').short-input
                        input(type='text', name='intern3').short-input

        div.row
            h5 Step4. 기대출정보
            table
                tr
                    td
                        span 기존 대출여부
                        input(type='radio', name='loan-exist', value='true', id='loan-radio-true')
                        label(for='loan-radio-true') 유
                        input(type='radio', name='loan-exist', value='false', id='loan-radio-false')
                        label(for='loan-radio-false') 무
                    td(colspan=2)
                        span 총 대출잔액
                        input(type='number', name='loan-total', placeholder='1500')
                        span 만원
                - for (var i = 0; i < 4; i++){
                    tr.loan-form-row.display-none
                        td
                            span 대출기관
                            select
                                option(value='신한은행') 신한은행
                                option(value='하나은행') 하나은행
                                option(value='우리은행') 우리은행
                                option(value='러시앤캐시') 러시앤캐시
                        td
                            span 기관분류
                            select
                                option(value='제1금융권') 제1금융권
                                option(value='제2금융권') 제2금융권
                                option(value='사금융') 사금융
                        td
                            span 대출목적
                            input(type='text', placeholder='예) 생활비')
                        td
                            span 대출잔액
                            input(type='number', placeholder='예) 500')
                            span 만원
                            i.fa.fa-plus-circle.plus-button-loan
                - }

        div.container-fluid
            input(type='button', value='다음 단계로')#credit-auth.col-xs-4.ajax-post.credit_eval.loan-link

    script(src='/javascripts/creditInitFunc.js')

